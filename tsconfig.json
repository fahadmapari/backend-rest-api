{
  "compilerOptions": {
    "target": "ES2021",
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "moduleDetection": "force",
    "outDir": "dist",
    "rootDir": "src",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true, 
    "typeRoots": ["./src/types"],
    "paths": {
      "./src/*": ["./src/*"],
      "./*": ["./*"],
    }
  },
  "include": ["src"],
  "exclude": ["dist", "node_modules"]
}
